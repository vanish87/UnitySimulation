#pragma kernel InitBuffer

#include "DefaultParticle.hlsl"

RWStructuredBuffer<Particle> _Buffer;
uint _BufferCount;

[numthreads(128,1,1)]
void InitBuffer(uint3 id : SV_DispatchThreadID)
{
    const uint pid= id.x;
    if(pid >= _BufferCount) return;

    Particle p = _Buffer[pid];
    p = (Particle)0;
    p.SetUUID(pid);
    p.SetActive(true);
    p.SetType(PT_FLUID);
    _Buffer[pid] = p;
}
