#pragma kernel RandomParticle

#include "DefaultParticle.hlsl"

RWStructuredBuffer<Particle> _Buffer;
uint _BufferCount;

[numthreads(128,1,1)]
void RandomParticle(uint3 id : SV_DispatchThreadID)
{
    const uint pid= id.x;
    if(pid >= _BufferCount) return;

    Particle p = _Buffer[pid];

    _Buffer[pid] = p;
}